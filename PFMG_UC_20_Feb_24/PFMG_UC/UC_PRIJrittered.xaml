<UserControl x:Class="PFMG_UC.UC_PRIJittered"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:local="clr-namespace:PFMG_UC"
mc:Ignorable="d" 
             d:DesignHeight="147.479" Width="736.975">
    <Grid Background="#FFEFF9F9" Margin="10,10,10,0">
        <Label Content="PRI Agility : Jittered" HorizontalAlignment="Left" Margin="14,8,0,0" VerticalAlignment="Top" Width="134" Height="33" FontFamily="Segoe UI Semibold"/>

        <Label Content="PRI min ( µs )" HorizontalAlignment="Left" Margin="14,47,0,0" VerticalAlignment="Top" Width="93" Height="25" FontFamily="Segoe UI Semibold"/>
        <TextBox x:Name="txt_PRImin" HorizontalAlignment="Left" Height="23" Margin="125,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Segoe UI Semibold" AutomationProperties.HelpText="Enter PRI min" RenderTransformOrigin="-2,0" />
        <Label Content="PRI max ( µs )" HorizontalAlignment="Left" Margin="266,47,0,0" VerticalAlignment="Top" Width="93" Height="25" FontFamily="Segoe UI Semibold"/>
        <TextBox x:Name="txt_PRImax" HorizontalAlignment="Left" Height="23" Margin="363,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Segoe UI Semibold" />
        <Label Content="Tolerance" HorizontalAlignment="Left" Margin="519,49,0,0" VerticalAlignment="Top" Width="66" Height="25" FontFamily="Segoe UI Semibold"/>
        <TextBox x:Name="txt_Tolerance" HorizontalAlignment="Left" Height="23" Margin="590,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Segoe UI Semibold" />

        <Label Content="Jitter Percentage" HorizontalAlignment="Left" Margin="14,88,0,0" VerticalAlignment="Top" Width="112" Height="30" FontFamily="Segoe UI Semibold"/>
        <TextBox x:Name="txt_JitterPercent" HorizontalAlignment="Left" Height="23" Margin="125,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Segoe UI Semibold" AutomationProperties.HelpText="Enter PRI min" RenderTransformOrigin="-2,0" />
    </Grid>
</UserControl>
