<UserControl x:Class="PFMG.UC_Book"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PFMG"
             mc:Ignorable="d" d:DesignWidth="260.705" Height="136">
    <Grid x:Name="uc_book" Background="White" Margin="0,-4,0,10">
        <TextBox x:Name="txt_id" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="115,37,0,0"/>
        <TextBox x:Name="txt_name" HorizontalAlignment="Left" Margin="115,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_Copy" Content="Book Name" HorizontalAlignment="Left" Margin="24,82,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy1" Content="Book ID" HorizontalAlignment="Left" Margin="24,29,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
